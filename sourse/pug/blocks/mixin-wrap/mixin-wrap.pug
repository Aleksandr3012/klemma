mixin arrow()
	.swiper-button-hand.swiper-button-hand-prev.swiper-button-prev
		+icon('chevron-left')
	.swiper-button-hand.swiper-button-hand-next.swiper-button-next
		+icon('chevron-right')
//- /arrow for swiper-slider

mixin rating()
	+b.rating(data-total-value="5")
		+e.item(data-item-value="5")
			+icon('star')
		+e.item(data-item-value="4")
			+icon('star')
		+e.item(data-item-value="3")
			+icon('star')
		+e.item(data-item-value="2")
			+icon('star')
		+e.item(data-item-value="1")
			+icon('star')

